<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/villainsFragment">
    <fragment
        android:id="@+id/villainsFragment"
        android:name="com.doiliomatsinhe.dcvilains.ui.villain.VillainsFragment"
        android:label="DC Villains"
        tools:layout="@layout/fragment_villains">
        <action
            android:id="@+id/action_villainsFragment_to_villainDetailFragment"
            app:destination="@id/villainDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/villainDetailFragment"
        android:name="com.doiliomatsinhe.dcvilains.ui.villaindetail.VillainDetailFragment"
        tools:layout="@layout/fragment_villain_detail">
        <argument
            android:name="villainId"
            app:argType="integer" />
        <argument
            android:name="villainName"
            app:argType="string" />
        <argument
            android:name="cardColor"
            app:argType="integer" />
    </fragment>
</navigation>